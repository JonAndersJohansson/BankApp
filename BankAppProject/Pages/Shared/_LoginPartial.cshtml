@using Microsoft.AspNetCore.Identity
@using DataAccessLayer.Models
@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> AppUserManager
@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> AppSignInManager

<ul class="navbar-nav navbar-login-aurora">
    @if (AppSignInManager.IsSignedIn(User))
{
    <li class="nav-item" id="navbar-aurora-logged-in">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">You: @User.Identity?.Name</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button  type="submit" class="btn btn-primary" id="login-logout">Logout</button>
        </form>
    </li>
}
else
{
    @if (User.IsInRole("Admin"))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
    }

    <li class="nav-item">
            <a class="btn btn-primary" id="login-logout" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
