<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Aurorabank">
    <meta name="author" content="">

    <title>@ViewData["Title"] - Aurorabank</title>

    <!-- Custom fonts for this template -->
    <link href="https://fonts.googleapis.com/css2?family=Rokkitt:wght@300;400;700&display=swap" rel="stylesheet">
    
    <!-- Custom icons with Fontawesome -->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Custom styles for this template (SCSS-kompilerad CSS) -->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/css/custom.css" rel="stylesheet">
</head>

<body id="page-top">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom shadow-lg p-3 mb-5 bg-white rounded">
            <div class="container">
                <!-- Logotyp -->
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/img/aurorabank-logo.png" alt="Aurora-logo" class="img-fluid" style="max-width: 150px;">
                </a>

                <!-- Navbar-knapp för mobil -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNav">
                    <!-- Länkar till vänster -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                            </li>
                        }
                    </ul>

                    <!-- Login/Register till höger -->
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>
                </div>

            </div>

        </nav>
    </header>
    <!-- Huvudinnehåll -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BankApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Bootstrap JavaScript -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/sb-admin-2.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
