@page
@model BankAppProject.Pages.Account.DepositModel

<h4>Deposit</h4>
<button class="btn btn-primary mt-0" onclick="window.history.back();">⬅ Back</button>
<form method="post" class="mt-3">
    <input type="hidden" name="accountId" value="@Request.Query["id"]" />
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Amount" class="form-label">Amount</label>
            <input type="number" class="form-control" asp-for="Amount" min="1" max="100000" required />
            <span class="text-danger" asp-validation-for="Amount"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="DepositDate" class="form-label">Date</label>
            <input type="date" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-dd")" asp-for="DepositDate" required />
            <span class="text-danger" asp-validation-for="DepositDate"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Comment" class="form-label">Comment</label>
        <textarea class="form-control" asp-for="Comment" rows="2" required></textarea>
        <span class="text-danger" asp-validation-for="Comment"></span>
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Deposit <i class="fa-solid fa-plus"></i></button>
    </div>
    <!-- Enum errors -->
    <div asp-validation-summary="All" class="alert alert-danger"></div>
</form>
