@page "{accountId:int}/{customerId:int}"
@model BankAppProject.Pages.Account.DepositModel
@{
}
<a asp-page="/Account/AccountDetails"
   asp-route-accountId="@Model.Account.AccountId"
   asp-route-customerId="@Model.CustomerId"
   class="btn btn-primary mb-2">
    <i class="fa-solid fa-arrow-left"></i>
</a>

<div class="card-header p-2">
    <h2 class="mb-0">Deposit</h2>
</div>

@if (Model.Account != null)
{
    <div class="card d-flex flex-row flex-wrap justify-content-between mb-3 p-2">
        <p class="mb-0 me-2 mr-3 small-p"><strong>To account nr: </strong>@Model.Account.AccountId</p>
        <p class="mb-0 me-2 mr-3 small-p"><strong>Balance: </strong>@Model.Account.Balance.ToString("C", new System.Globalization.CultureInfo("de-DE"))</p>
    </div>
}
else
{
    <p class="text-danger">Account information could not be loaded.</p>
}
<form method="post" class="mt-3 p-2">
    <input type="hidden" asp-for="AccountId" />
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Amount" class="form-label">Amount</label>
            <input type="number" class="form-control" asp-for="Amount" min="1" max="100000" required />
            <span class="text-danger" asp-validation-for="Amount"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="DepositDate" class="form-label">Date</label>
            <input type="date" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-dd")" asp-for="DepositDate" required />
            <span class="text-danger" asp-validation-for="DepositDate"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Comment" class="form-label">Comment</label>
        <textarea class="form-control" asp-for="Comment" rows="2"></textarea>
        <span class="text-danger" asp-validation-for="Comment"></span>
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-outline-primary">Deposit <i class="fa-solid fa-plus"></i></button>
    </div>
    <!-- Enum errors -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div asp-validation-summary="All" class="alert alert-danger"></div>
    }
</form>


