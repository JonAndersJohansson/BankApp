@page
@model BankAppProject.Pages.Account.TransferModel
@{
}
<h4>Transfer</h4>
@if (Model.Account != null)
{
    <div class="d-flex flex-wrap justify-content-between">
        <a asp-page="/Account/AccountDetails" asp-route-accountId="@Model.Account.AccountId" class="btn btn-primary">
            <i class="fa-solid fa-arrow-left"></i> Back
        </a>
        @*         <button class="btn btn-primary mt-0" onclick="window.history.back();">⬅ Back</button> *@
        <h5>Account nr: @Model.Account.AccountId</h5>
        <h5>Balance: @Model.Account.Balance.ToString("C", new System.Globalization.CultureInfo("de-DE"))</h5>
    </div>
}
else
{
    <p class="text-danger">Account information could not be loaded.</p>
}

<form method="post" class="mt-3">
    <input type="hidden" asp-for="AccountId" />
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Amount" class="form-label">Amount</label>
            <input type="number" class="form-control" asp-for="Amount" min="1" max="100000" required />
            <span class="text-danger" asp-validation-for="Amount"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="TransferDate" class="form-label">Date</label>
            <input type="date" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-dd")" asp-for="TransferDate" required />
            <span class="text-danger" asp-validation-for="TransferDate"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="ReceiverAccountId" class="form-label">Receiver account (id)</label>
            <input type="number" class="form-control" asp-for="ReceiverAccountId" required />
            <span class="text-danger" asp-validation-for="ReceiverAccountId"></span>
        </div>
        <div></div>
    </div>

    <div class="mb-3">
        <label asp-for="Comment" class="form-label">Comment</label>
        <textarea class="form-control" asp-for="Comment" rows="2"></textarea>
        <span class="text-danger" asp-validation-for="Comment"></span>
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Transfer <i class="fa-solid fa-arrow-up-from-bracket"></i></button>
    </div>
    <!-- Enum errors -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    }
</form>