@page "{accountId:int}/{customerId:int}"
@model BankAppProject.Pages.Account.TransferModel
@{
}
<a asp-page="/Account/AccountDetails"
   asp-route-accountId="@Model.Account.AccountId"
   asp-route-customerId="@Model.CustomerId"
   class="btn btn-primary mb-2">
    <i class="fa-solid fa-arrow-left"></i>
</a>
<div class="card-header p-2">
    <h2 class="mb-0">Transfer</h2>
</div>
@if (Model.Account != null)
{
    <div class="card d-flex flex-row flex-wrap justify-content-between mb-3 p-2">
        <p class="mb-0 me-2 mr-3 small-p"><strong>From account nr: </strong>@Model.Account.AccountId</p>
        <p class="mb-0 me-2 mr-3 small-p"><strong>Balance: </strong>@Model.Account.Balance.ToString("C", new System.Globalization.CultureInfo("de-DE"))</p>
    </div>
}
else
{
    <p class="text-danger">Account information could not be loaded.</p>
}

<form method="post" class="mt-3">
    <input type="hidden" asp-for="AccountId" />
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Amount" class="form-label">Amount</label>
            <input type="number" class="form-control" asp-for="Amount" min="1" max="100000" />
            <span class="text-danger" asp-validation-for="Amount"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="TransferDate" class="form-label">Date</label>
            <input type="date" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-dd")" asp-for="TransferDate" />
            <span class="text-danger" asp-validation-for="TransferDate"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="ReceiverAccountId" class="form-label">Receiving account (id)</label>
            <input type="number" class="form-control" asp-for="ReceiverAccountId" />
            <span class="text-danger" asp-validation-for="ReceiverAccountId"></span>
        </div>
        <div></div>
    </div>

    <div class="mb-3">
        <label asp-for="Comment" class="form-label">Comment</label>
        <textarea class="form-control" asp-for="Comment" rows="2"></textarea>
        <span class="text-danger" asp-validation-for="Comment"></span>
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-outline-primary">Transfer <i class="fa-solid fa-arrow-up-from-bracket"></i></button>
    </div>

    <!--ERRORS-->
    @if (TempData["ValidationErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-2 text-center">
            @TempData["ValidationErrorMessage"]
        </div>
    }
    @if (TempData["InvalidBalanceMessage"] != null)
    {
        <div class="alert alert-danger mt-2 text-center">
            @TempData["InvalidBalanceMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-2 text-center">
            @TempData["ErrorMessage"]
        </div>
    }
</form>

<partial name="_ValidationScriptsPartial" />