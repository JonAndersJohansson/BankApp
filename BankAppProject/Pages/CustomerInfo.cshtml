@page
@model BankAppProject.Pages.CustomerInfoModel
@{
}
<div class="container mt-4">
    <div class="row">
        <!-- Vänster: Kontoinformation -->
        <div class="col-md-6">
            <h3>Kundens Konton</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Kontonummer</th>
                        <th>Saldo</th>
                        <th>Frekvens</th>
                        <th>Skapad</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var account in Model.Customer.Accounts)
                    {
                        <tr>
                            <td>@account.AccountId</td>
                            <td>@account.Balance.ToString("C")</td>
                            <td>@account.Frequency</td>
                            <td>@account.Created.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Höger: Kundinformation -->
        <div class="col-md-6">
            <h3>Kundinformation</h3>
            <ul class="list-group">
                <li class="list-group-item"><strong>Namn:</strong> @Model.Customer.Name</li>
                <li class="list-group-item"><strong>Adress:</strong> @Model.Customer.Streetaddress</li>
                <li class="list-group-item"><strong>Postnummer & Stad:</strong> @Model.Customer.ZipcodeCity</li>
                <li class="list-group-item"><strong>Land:</strong> @Model.Customer.Country</li>
                <li class="list-group-item"><strong>Födelsedatum:</strong> @Model.Customer.Birthday?.ToShortDateString()</li>
                <li class="list-group-item"><strong>Ålder:</strong> @Model.Customer.Age</li>
                <li class="list-group-item"><strong>National ID:</strong> @Model.Customer.NationalId</li>
                <li class="list-group-item"><strong>Telefon:</strong> @Model.Customer.Phonenumber</li>
                <li class="list-group-item"><strong>Email:</strong> @Model.Customer.Emailaddress</li>
                <li class="list-group-item"><strong>Totalt saldo:</strong> @Model.Customer.TotalBalance.ToString("C")</li>
            </ul>
        </div>
    </div>
</div>