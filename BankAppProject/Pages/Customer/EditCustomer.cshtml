@page
@model BankAppProject.Pages.Customer.EditCustomerModel
@{
}
<div class="card">
    <div class="card-header">
        <h2 class="mb-0">Edit Customer</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="row mb-3">
                <div class="col-md-5">
                    <label asp-for="Customer.Givenname">First name</label>
                    <input class="form-control" asp-for="Customer.Givenname" required>
                    <span asp-validation-for="Customer.Givenname" class="field-validation-error"></span>
                </div>
                <div class="col-md-5">
                    <label asp-for="Customer.Surname">Last name</label>
                    <input class="form-control" asp-for="Customer.Surname" required>
                    <span asp-validation-for="Customer.Surname" class="field-validation-error"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="CustomerGender">Gender</label>
                    <select class="form-control" asp-for="CustomerGender" required asp-items="@Model.Genders">
                    </select>
                    <span asp-validation-for="CustomerGender"
                          class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Customer.Streetaddress">Street address</label>
                    <input class="form-control" asp-for="Customer.Streetaddress" required>
                    <span asp-validation-for="Customer.Streetaddress" class="field-validation-error"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Customer.City">City</label>
                    <input class="form-control" asp-for="Customer.City" required>
                    <span asp-validation-for="Customer.City" class="field-validation-error"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Customer.Zipcode">Zipcode</label>
                    <input class="form-control" asp-for="Customer.Zipcode" required>
                    <span asp-validation-for="Customer.Zipcode" class="field-validation-error"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="CustomerCountry">Country</label>
                    <select class="form-control" asp-for="CustomerCountry" required asp-items="@Model.Countries">
                    </select>
                    <span asp-validation-for="CustomerCountry"
                          class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Customer.Birthday">Birthday</label>
                    <input type="date" class="form-control"
                           asp-for="Customer.Birthday"
                           max="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="Customer.Birthday" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Customer.NationalId">Social security #</label>
                    <input class="form-control" asp-for="Customer.NationalId" required>
                    <span asp-validation-for="Customer.NationalId" class="field-validation-error"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Customer.Telephonenumber">Phone</label>
                    <div class="input-group">
                        <span class="input-group-text" id="countryCode"></span>
                        <input class="form-control" asp-for="Customer.Telephonenumber" required>
                    </div>
                    <span asp-validation-for="Customer.Telephonenumber" class="field-validation-error"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Customer.Emailaddress">Email</label>
                    <input class="form-control" asp-for="Customer.Emailaddress" required>
                    <span asp-validation-for="Customer.Emailaddress" class="field-validation-error"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
        <!-- Enum errors -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        }
    </div>
</div>
@section Scripts {
    <script>
        const countrySelect = document.querySelector('[name="CustomerCountry"]');
        const prefixSpan = document.getElementById('countryCode');

        const countryCodes = {
            Sweden: "+46",
            Norway: "+47",
            Denmark: "+45",
            Finland: "+358"
        };

        countrySelect.addEventListener('change', () => {
            const country = countrySelect.value;
            const code = countryCodes[country] || '';
            prefixSpan.textContent = code;
        });
    </script>
}