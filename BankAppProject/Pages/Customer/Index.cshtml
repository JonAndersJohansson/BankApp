@page
@model BankAppProject.Pages.Customer.IndexModel
@{
}
<h2>Customers</h2>
@if (TempData["InactivatedCustomerMessage"] != null)
{
    <div class="alert alert-success mt-2 text-center">
        @TempData["InactivatedCustomerMessage"]
    </div>
}

@*Search*@
<div class="d-flex flex-wrap justify-content-between">
    <form method="get" class="d-flex" style="max-width: 400px;">
        <div class="input-group">
            <input type="text"
                   class="form-control bg-light border-1 small"
                   name="q"
                   value="@Model.Q"
                   placeholder="Search by Id, name, city" />

            <input type="hidden" name="sortColumn" value="@Request.Query["sortColumn"]" />
            <input type="hidden" name="sortOrder" value="@Request.Query["sortOrder"]" />
            <input type="hidden" name="pageNumber" value="1" />

            <button type="submit" id="search-btn"><i class="fas fa-search"></i></button>
        </div>
    </form>

    <a asp-page="/Customer/NewCustomer" class="btn btn-outline-secondary"><i class="fa-solid fa-plus"></i><i class="fa-solid fa-user"></i></a>
</div>





<p class="mt-2">Page @Model.PageNumber</p>
<table class="table table-bordered table-striped mt-2">

    <thead>
        <tr>
            <th scope="col">
                <div class="d-flex flex-column flex-md-row align-items-center">
                    <span class="pr-3 th-content">ID</span>
                    <div>
                        <a asp-page="/Customer/Index"
                           asp-route-sortColumn="Id"
                           asp-route-sortOrder="asc"
                           asp-route-q="@Model.Q"
                           asp-route-pageNumber="1"
                           class="th-content"
                           style="text-decoration:none">
                            <i class="fa-solid fa-angle-up"></i>

                        </a>
                        <a asp-page="/Customer/Index"
                           asp-route-sortColumn="Id"
                           asp-route-sortOrder="desc"
                           asp-route-q="@Model.Q"
                           asp-route-pageNumber="1"
                           class="th-content"
                           style="text-decoration:none">
                            <i class="fa-solid fa-angle-down"></i>
                        </a>
                    </div>
                </div>
            </th>
            <th scope="col">
                <div class="d-flex flex-column flex-md-row align-items-center">
                    <span class="pr-2 th-content">Nat.ID</span>
                    <div>
                        <a asp-page="/Customer/Index"
                           asp-route-sortColumn="National Id"
                           asp-route-sortOrder="asc"
                           asp-route-q="@Model.Q"
                           asp-route-pageNumber="1"
                           class="th-content"
                           style="text-decoration:none">
                            <i class="fa-solid fa-angle-up"></i>
                        </a>
                        <a asp-page="/Customer/Index"
                           asp-route-sortColumn="National Id"
                           asp-route-sortOrder="desc"
                           asp-route-q="@Model.Q"
                           asp-route-pageNumber="1"
                           class="th-content"
                           style="text-decoration:none">
                            <i class="fa-solid fa-angle-down"></i>
                        </a>
                    </div>
                </div>
            </th>
            <th scope="col">
                <div class="d-flex flex-column flex-md-row align-items-center">
                    <span class="pr-2 th-content">Name</span>
                    <div>
                        <a asp-page="/Customer/Index"
                           asp-route-sortColumn="Name"
                           asp-route-sortOrder="asc"
                           asp-route-q="@Model.Q"
                           asp-route-pageNumber="1"
                           class="th-content"
                           style="text-decoration:none">
                            <i class="fa-solid fa-angle-up"></i>

                        </a>
                        <a asp-page="/Customer/Index"
                           asp-route-sortColumn="Name"
                           asp-route-sortOrder="desc"
                           asp-route-q="@Model.Q"
                           asp-route-pageNumber="1"
                           class="th-content"
                           style="text-decoration:none">
                            <i class="fa-solid fa-angle-down"></i>
                        </a>
                    </div>
                </div>
            </th>
            <th scope="col">
                <div class="d-flex flex-column flex-md-row align-items-center">
                    <span class="pr-2 th-content">Address</span>
                    <div>
                        <a asp-page="/Customer/Index"
                           asp-route-sortColumn="Address"
                           asp-route-sortOrder="asc"
                           asp-route-q="@Model.Q"
                           asp-route-pageNumber="1"
                           class="th-content"
                           style="text-decoration:none">
                            <i class="fa-solid fa-angle-up"></i>
                        </a>
                        <a asp-page="/Customer/Index"
                           asp-route-sortColumn="Address"
                           asp-route-sortOrder="desc"
                           asp-route-q="@Model.Q"
                           asp-route-pageNumber="1"
                           class="th-content"
                           style="text-decoration:none">
                            <i class="fa-solid fa-angle-down"></i>
                        </a>
                    </div>
                </div>
            </th>
            <th scope="col">
                <div class="d-flex flex-column flex-md-row align-items-center">
                    <span class="pr-2 th-content">City</span>
                    <div>
                        <a asp-page="/Customer/Index"
                           asp-route-sortColumn="City"
                           asp-route-sortOrder="asc"
                           asp-route-q="@Model.Q"
                           asp-route-pageNumber="1"
                           class="th-content"
                           style="text-decoration:none">
                            <i class="fa-solid fa-angle-up"></i>
                        </a>
                        <a asp-page="/Customer/Index"
                           asp-route-sortColumn="City"
                           asp-route-sortOrder="desc"
                           asp-route-q="@Model.Q"
                           asp-route-pageNumber="1"
                           class="th-content"
                           style="text-decoration:none">
                            <i class="fa-solid fa-angle-down"></i>
                        </a>
                    </div>
                </div>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="table-sm">

        @foreach (var customer in Model.Customers)
        {
            <tr class="table-row-view">
                <td>@customer.Id</td>
                <td>@customer.NationalId</td>
                <td>@customer.Name</td>
                <td>@customer.Address</td>
                <td>@customer.City</td>
                <td class="cell-clickable">
                    <a asp-page="/Customer/CustomerDetails" asp-route-customerId="@customer.Id">
                        <i class="fa-solid fa-eye"></i>
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>
<div class="pagination">
    @if (Model.PageNumber > 1)
    {
        <a asp-page="/Customer/Index"
           asp-route-sortColumn="@Request.Query["sortColumn"]"
           asp-route-sortOrder="@Request.Query["sortOrder"]"
           asp-route-q="@Model.Q"
           asp-route-pageNumber="@(Model.PageNumber - 1)"
           class="btn btn-outline-primary"><i class="fa-solid fa-arrow-left"></i></a>
    }
    <p class="display-pagenumber">Page @Model.PageNumber</p>
    @if ((Model.PageNumber * Model.PageSize) < Model.TotalCustomers)
    {
        <a asp-page="/Customer/Index"
           asp-route-sortColumn="@Request.Query["sortColumn"]"
           asp-route-sortOrder="@Request.Query["sortOrder"]"
           asp-route-q="@Model.Q"
           asp-route-pageNumber="@(Model.PageNumber + 1)"
           class="btn btn-outline-primary"><i class="fa-solid fa-arrow-right"></i></a>
    }
</div>

