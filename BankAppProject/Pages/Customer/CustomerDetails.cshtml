@page
@model BankAppProject.Pages.Customer.CustomerDetailsModel
@{
}
<div class="container mt-4">
    <h4>Id: @Model.Customer.CustomerId, @Model.Customer.Name</h4>
    <div class="row">
        <!-- Vänster Kontoinfo -->
        <div class="col-md-6">
            <h5>Accounts</h5>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Account nr</th>
                        <th>Balance</th>
                        <th>Frequency</th>
                        <th>Created</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var account in Model.Customer.Accounts)
                    {
                        <tr>
                            <td>@account.AccountId</td>
                            <td>@account.Balance.ToString("C")</td>
                            <td>@account.Frequency</td>
                            <td>@account.Created.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="list-group-item"><strong>Total assets:</strong> @Model.Customer.TotalBalance.ToString("C", new System.Globalization.CultureInfo("de-DE"))</div>
        </div>

        <!-- Höger Kundinfo -->
        <div class="col-md-6">
            <h5>Customer Info</h5>
            <div class="container">
                <div class="row">
                    <div class="col-md-3"><strong>Name:</strong></div>
                    <div class="col">@Model.Customer.Name</div>
                </div>
                <div class="row">
                    <div class="col-md-3"><strong>Address:</strong></div>
                    <div class="col">@Model.Customer.Streetaddress</div>
                </div>
                <div class="row">
                    <div class="col-md-3">@* <strong>Postnummer & Stad:</strong> *@</div>
                    <div class="col">@Model.Customer.ZipcodeCity</div>
                </div>
                <div class="row">
                    <div class="col-md-3">@* <strong>Land:</strong> *@</div>
                    <div class="col">@Model.Customer.Country</div>
                </div>
                <div class="row">
                    <div class="col-md-3"><strong>Birthday:</strong></div>
                    <div class="col">@Model.Customer.Birthday?.ToShortDateString()</div>
                </div>
                <div class="row">
                    <div class="col-md-3"><strong>Age:</strong></div>
                    <div class="col">@Model.Customer.Age</div>
                </div>
                <div class="row">
                    <div class="col-md-3"><strong>Nat. ID:</strong></div>
                    <div class="col">@Model.Customer.NationalId</div>
                </div>
                <div class="row">
                    <div class="col-md-3"><strong>Phone:</strong></div>
                    <div class="col">@Model.Customer.Phonenumber</div>
                </div>
                <div class="row">
                    <div class="col-md-3"><strong>E-mail:</strong></div>
                    <div class="col">@Model.Customer.Emailaddress</div>
                </div>
            </div>
        </div>


    </div>
    <button class="btn btn-secondary mt-3" onclick="window.history.back();">⬅ Back</button>
</div>