@page
@model IndexModel
@{
    ViewData["Title"] = "Aurorabank";
}

<section class="hero-section">
    <img src="~/img/banner.jpg" alt="Bank Panorama">
    <div class="hero-text">
        <h2>Ensuring a secure future</h2>
        <button class="btn btn-info btn-lg mt-3" id="hero-btn">Login</button>
    </div>
</section>


<!-- Länder - 4 kort -->
<div class="container mt-5">
    <div class="row">
        @foreach (var country in Model.CountryStatistics)
        {
            <partial name="_CountryBox" model="@country" />
        }
    </div>
</div>
