@page
@model IndexModel
@{
    ViewData["Title"] = "Välkommen till BankApp";
}

<section class="hero-section">
    <img src="~/img/banner.jpg" alt="Bank Panorama">
    <div class="hero-text">
        <h2>Ensuring a secure future</h2>
        <button class="btn btn-info btn-lg mt-3">Login</button>
    </div>
</section>


<!-- Länder - 4 kort -->
<div class="container mt-5">
    <div class="row">
        @foreach (var country in Model.CountryStatistics)
        {
            <div class="col-md-3">
                <div class="card text-center shadow-lg">
                    <img src="~/images/flags/@(country.CountryCode.ToLower()).png" class="card-img-top" alt="Flag">
                    <div class="card-body">
                        <h5 class="card-title">@country.CountryCode</h5>

                        <p><i class="bi bi-person-arms-up"></i> Clients</p>
                        <h3>@country.TotalClients</h3>

                        <p><i class="fas fa-credit-card"></i> Accounts</p>
                        <h3>@country.TotalAccounts</h3>

                        <p><i class="fas fa-coins"></i> Capital</p>
                        <h3>@country.TotalCapital.ToString("C")</h3>
                    </div>
                </div>
            </div>
        }
    </div>

