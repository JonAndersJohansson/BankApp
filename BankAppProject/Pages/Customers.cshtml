@page
@model BankAppProject.Pages.CustomersModel
@{
}
<h1>Customers</h1>

<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th scope="col">
                ID
                <a asp-page="/Customers"
                   asp-route-sortColumn="Id"
                   asp-route-sortOrder="asc"
                   style="text-decoration:none">
                    <i class="fa-solid fa-angle-up"></i>

                </a>
                <a asp-page="/Customers"
                   asp-route-sortColumn="Id"
                   asp-route-sortOrder="desc"
                   style="text-decoration:none">
                    <i class="fa-solid fa-angle-down"></i>
                </a>
            </th>
            <th scope="col">
                Nat.ID
                <a asp-page="/Customers"
                   asp-route-sortColumn="National Id"
                   asp-route-sortOrder="asc"
                   style="text-decoration:none">
                    <i class="fa-solid fa-angle-up"></i>

                </a>
                <a asp-page="/Customers"
                   asp-route-sortColumn="National Id"
                   asp-route-sortOrder="desc"
                   style="text-decoration:none">
                    <i class="fa-solid fa-angle-down"></i>
                </a>
            </th>
            <th scope="col">
                Name
                <a asp-page="/Customers"
                   asp-route-sortColumn="Name"
                   asp-route-sortOrder="asc"
                   style="text-decoration:none">
                    <i class="fa-solid fa-angle-up"></i>

                </a>
                <a asp-page="/Customers"
                   asp-route-sortColumn="Name"
                   asp-route-sortOrder="desc"
                   style="text-decoration:none">
                    <i class="fa-solid fa-angle-down"></i>
                </a>
            </th>
            <th scope="col">
                Address
                <a asp-page="/Customers"
                   asp-route-sortColumn="Address"
                   asp-route-sortOrder="asc"
                   style="text-decoration:none">
                    <i class="fa-solid fa-angle-up"></i>

                </a>
                <a asp-page="/Customers"
                   asp-route-sortColumn="Address"
                   asp-route-sortOrder="desc"
                   style="text-decoration:none">
                    <i class="fa-solid fa-angle-down"></i>
                </a>
            </th>
            <th scope="col">
                City
                <a asp-page="/Customers"
                   asp-route-sortColumn="City"
                   asp-route-sortOrder="asc"
                   style="text-decoration:none">
                    <i class="fa-solid fa-angle-up"></i>

                </a>
                <a asp-page="/Customers"
                   asp-route-sortColumn="City"
                   asp-route-sortOrder="desc"
                   style="text-decoration:none">
                    <i class="fa-solid fa-angle-down"></i>
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="table-sm">

        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.NationalId</td>
                <td>@customer.Name</td>
                <td>@customer.Address</td>
                <td>@customer.City</td>
                <td id="customer-tabledata-view-btn"><a asp-page="/Customers" asp-route-id="@customer.Id" class="btn btn-info" id="customer-view-btn">View</a></td>
            </tr>
        }
    </tbody>
</table>
<div class="pagination">
    @if (Model.PageNumber > 1)
    {
        <a asp-page="/Customers"
           asp-route-sortColumn="@Request.Query["sortColumn"]"
           asp-route-sortOrder="@Request.Query["sortOrder"]"
           asp-route-pageNumber="@(Model.PageNumber - 1)"
           class="btn btn-secondary" id="previous-btn"><i class="fa-solid fa-arrow-left"></i>Previous</a>
    }

    @if ((Model.PageNumber * Model.PageSize) < Model.TotalCustomers)
    {
        <a asp-page="/Customers"
           asp-route-sortColumn="@Request.Query["sortColumn"]"
           asp-route-sortOrder="@Request.Query["sortOrder"]"
           asp-route-pageNumber="@(Model.PageNumber + 1)"
           class="btn btn-secondary">Next<i class="fa-solid fa-arrow-right"></i></a>
    }
</div>

